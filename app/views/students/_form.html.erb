<%= form_for @student, :html => { :class => 'form-horizontal' } do |f| %>
<div class="control-group">
	<%= f.label :name, :class => 'control-label' %>
	<div class="controls">
		<%= f.text_field :name, :class => 'text_field' %>
	</div>
</div>
<div class="control-group">
	<%= f.label :born_date, :class => 'control-label' %>
	<div class="controls">
		<%= f.text_field :born_date, :class => 'date_select test', 'data-behaviour' => 'datepicker' %>

	</div>
</div>
<div class="control-group">
	<%= f.label :sexo, :class => 'control-label' %>
	<div class="controls">
		<%= f.enum_select :gender, :class => 'number_field' %>
	</div>
</div>

<div class="control-group">
	<%= f.label :sponsors, :class => 'control-label' %>
	<div class="controls">

		<%= select_tag :sponsors, options_for_select( Sponsor.all.map { |s| [s.name, s.id] }, 
				@student.sponsors.map  { |j| j.id } ), 
				include_blank: true, :multiple => true, :style => 'width:90%;height:5%;display:none;', :class => 'chosen'
		%>

	</div>
</div>



<div class="form-actions">
	<%= f.submit nil, :class => 'btn btn-primary' %>
	<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	students_path, :class => 'btn' %>
</div>
<% end %>
