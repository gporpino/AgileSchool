<%- model_class = Student -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @student.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_de_nascimento) %>:</strong></dt>
  <dd><%= @student.born_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gênero) %>:</strong></dt>
  <dd><%= @student.gender.to_s.titleize %></dd>
  <dt><strong><%= model_class.human_attribute_name(:responsáveis) %>:</strong></dt>
  <dd>
    <% @student.sponsors.each do |sponsor| %>
      <span><%= sponsor.name %></span></br>
    <% end %>  
  </dd>
  <dt><strong><%= model_class.human_attribute_name(:responsável_financeiro) %>:</strong></dt>
  <dd><%= @student.financial_sponsor.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              students_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_student_path(@student), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              student_path(@student),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
